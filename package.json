{
  "name": "@leomerl/levys-awesome-mcp",
  "version": "1.0.2",
  "description": "A comprehensive MCP (Model Context Protocol) server toolkit with agent management, build automation, and content writing capabilities",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "levys-awesome-mcp": "./dist/src/index.js",
    "agent-generator": "./bin/agent-generator",
    "agent-invoker": "./bin/agent-invoker",
    "build-executor": "./bin/build-executor",
    "content-writer": "./bin/content-writer"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "test:golden": "vitest run tests/golden",
    "test:mutate": "stryker run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src utilities --ext .ts,.js",
    "lint:fix": "eslint src utilities --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepare": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "backend-agent": "npx tsx agents/backend-agent.ts --",
    "frontend-agent": "npx tsx agents/frontend-agent.ts --",
    "test-agent": "npx tsx agents/test-agent.ts --",
    "orchestrator-agent": "npx tsx agents/orchestrator-agent.ts --",
    "linter-agent": "npx tsx agents/linter-agent.ts --",
    "builder-agent": "npx tsx agents/builder.ts --",
    "planner-agent": "npx tsx agents/planner-agent.ts --"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "agents",
    "automation",
    "build-tools",
    "content-management",
    "cli"
  ],
  "author": "Levy <levy@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leomerl/levys-awesome-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/leomerl/levys-awesome-mcp/issues"
  },
  "homepage": "https://github.com/leomerl/levys-awesome-mcp#readme",
  "files": [
    "dist",
    "bin",
    "agents",
    "commands",
    "scripts",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.98",
    "@anthropic-ai/sdk": "^0.63.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@stryker-mutator/vitest-runner": "^8.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "zod": "^3.22.0"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./sdk": {
      "import": "./dist/src/sdk/index.js",
      "require": "./dist/src/sdk/index.js",
      "types": "./dist/src/sdk/index.d.ts"
    },
    "./utilities/*": {
      "import": "./dist/utilities/*.js",
      "require": "./dist/utilities/*.js",
      "types": "./dist/utilities/*.d.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
